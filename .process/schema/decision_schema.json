{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Decision Node",
  "description": "A decision node defines branching logic based on conditions.",
  "type": "object",
  "properties": {
    "id": {"type": "string"},
    "kind": {"const": "decision"},
    "description": {"type": ["string", "null"]},
    "next": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "when": {"type": "string"},
          "node": {"type": "string"}
        },
        "required": ["when", "node"]
      }
    },
    "telemetry": {
      "type": ["array", "null"],
      "items": {"type": "string"}
    }
  },
  "required": ["id", "kind", "next"]
}