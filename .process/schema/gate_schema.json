{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Gate Node",
  "description": "A gate in the process graph.  Gates enforce evidence requirements before passing to the next node.",
  "type": "object",
  "properties": {
    "id": {"type": "string"},
    "kind": {"const": "gate"},
    "description": {"type": ["string", "null"]},
    "requires": {
      "type": "array",
      "items": {"type": "object"}
    },
    "pass": {"type": "string"},
    "fail": {"type": "string"}
  },
  "required": ["id", "kind", "requires", "pass", "fail"]
}